rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /blogs/{newBlogId} {
      allow read: if request.auth != null && (request.auth.token.reader == true || request.auth.token.admin == true || request.auth.token.editor == true);
      allow write: if request.auth != null && (request.auth.token.admin == true || request.auth.token.editor == true);
    }
  }
}